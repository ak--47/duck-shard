{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "DuckDB CLI",
			"type": "shell",
			"dependsOn": "duckdb init", // <-- here!
			"command": "/usr/local/bin/duckdb",
			"args": [
				"-init",
				"duckdb_init.sql"
			],
			"options": {
				"env": {
					"GCS_KEY_ID": "${env:GCS_KEY_ID}",
					"GCS_SECRET": "${env:GCS_SECRET}"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Run All Tests",
			"type": "shell",
			"command": "cd tests && bats test.bats",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Check Dependencies",
			"type": "shell",
			"command": "echo 'Checking bats...' && command -v bats && echo 'âœ… bats found' || echo 'âŒ bats not found' && echo 'Checking duckdb...' && command -v duckdb && echo 'âœ… duckdb found' || echo 'âŒ duckdb not found'",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Deploy to Cloud Run",
			"type": "shell",
			"command": "chmod +x ./deploy.sh && ./deploy.sh",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [],
			"detail": "ðŸ¦† Make deploy.sh executable and deploy duck-shard API to Cloud Run",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "cloud-upload",
				"color": "terminal.ansiBlue"
			}
		},
		{
			"label": "Start Local API Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [],
			"detail": "ðŸš€ Start the duck-shard API server locally with hot reload",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "server-process",
				"color": "terminal.ansiGreen"
			}
		},
		{
			"label": "Test API Locally",
			"type": "shell",
			"command": "node",
			"args": ["example-client.mjs", "http://localhost:8080"],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [],
			"detail": "ðŸ§ª Test the duck-shard API running locally",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "beaker",
				"color": "terminal.ansiYellow"
			}
		},
		{
			"label": "Build Docker Image",
			"type": "shell",
			"command": "docker",
			"args": ["build", "-t", "duck-shard-api", "."],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": [],
			"detail": "ðŸ³ Build the Docker image locally for testing",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"icon": {
				"id": "package",
				"color": "terminal.ansiCyan"
			}
		}
	]
}
